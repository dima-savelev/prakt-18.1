        <Label Content="Фамилия" HorizontalAlignment="Left" Margin="28,13,0,0" VerticalAlignment="Top"/>
        <Label Content="Дата поступления на работу" HorizontalAlignment="Left" Margin="113,184,0,0" VerticalAlignment="Top" Width="169"/>
        <Label Content="Цех" HorizontalAlignment="Left" Margin="31,139,0,0" VerticalAlignment="Top"/>
        <Label Content="Отчество" HorizontalAlignment="Left" Margin="28,98,0,0" VerticalAlignment="Top"/>
        <Label Content="Имя" HorizontalAlignment="Left" Margin="28,62,0,0" VerticalAlignment="Top"/>
        <Label Content="Размер з/п" HorizontalAlignment="Left" Margin="247,13,0,0" VerticalAlignment="Top"/>
        <Label Content="Полных лет стажа" HorizontalAlignment="Left" Margin="247,62,0,0" VerticalAlignment="Top"/>
        <Label Content="Разряд" HorizontalAlignment="Left" Margin="247,98,0,0" VerticalAlignment="Top"/>
        <Label Content="Должность" HorizontalAlignment="Left" Margin="246,142,0,0" VerticalAlignment="Top"/>
        <Button Content="Добавить" HorizontalAlignment="Left" Margin="62,242,0,0" VerticalAlignment="Top" Width="64" Click="Add_Click"/>
        <Button Content="Отмена" HorizontalAlignment="Left" Margin="261,242,0,0" VerticalAlignment="Top" Width="67" Click="Cancel_Click"/>

    </Grid>
</Window>
