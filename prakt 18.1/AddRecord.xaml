        mc:Ignorable="d"
        Title="Добавить запись" Height="307" Width="395" ResizeMode="NoResize">
    <Grid>
        <TextBox x:Name="firstName" HorizontalAlignment="Left" Margin="28,44,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="middleName" HorizontalAlignment="Left" Margin="28,84,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="lastName" HorizontalAlignment="Left" Margin="28,124,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="workshop" HorizontalAlignment="Left" Margin="28,165,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <DatePicker x:Name="dateText" HorizontalAlignment="Left" Margin="148,215,0,0" VerticalAlignment="Top"/>
